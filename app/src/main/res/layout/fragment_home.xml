    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_98"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/iv_82"
            android:layout_height="@dimen/iv_82"
            android:layout_marginLeft="@dimen/iv_20"
            android:layout_marginRight="@dimen/iv_20"
            android:padding="@dimen/iv_15"
            android:src="@drawable/home_qrcode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/iv_10"
            android:layout_marginTop="@dimen/iv_10"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>